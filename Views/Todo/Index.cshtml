@model IEnumerable<MVC.Models.TodoModel>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="mb-4">Yapılacaklar listesi</h1>
    <a href="/Todo/Create" class="btn btn-primary mb-3">Yeni yapılacak ekle</a>
    <table class="table table-bordered">
        <thead class="table-dark">
        <tr>
            <th>İsim</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Any())
        {
            foreach (var todo in Model)
            {
                <tr>
                    <td>@todo.todoName</td>
                    <td>@todo.todoDescription</td>
                    <td>
                        @if (@todo.todoStatus)
                        {
                            <span class="badge bg-success">Tamamlandı</span>
                        }
                        else 
                        {
                            <span class="badge bg-warning">Bekliyor</span>
                        }
                        
                    </td>
                    <td>
                        <a href="/Todo/MarkAsComplete/@todo.Id" class="btn btn-sm btn-success">Tamamlandı</a>
                        <a href="/Todo/Details/@todo.Id" class="btn btn-sm btn-warning">Detay</a>
                        <a href="/Todo/Update/@todo.Id" class="btn btn-sm btn-primary">Güncelle</a>
                        <a href="/Todo/Delete/@todo.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">Henüz kayıt eklenmemiş.</td>
            </tr>
        }
        </tbody>
    </table>
</div>
